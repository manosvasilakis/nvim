{
	"languageserver": {
		// PHP
		"intelephense": {
			"command": "intelephense",
			"args": ["--stdio"],
			"filetypes": ["php"],
			"initializationOptions": {
				"storagePath": "/tmp/intelephense"
			}
		}
	},
	// Golang
	"go.goplsOptions": {
		"completionDocumentation": true
	},
	// webdev
	"html.autoClosingTags": true
}
